<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ghse.projects.janap.shibaplanner">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="de.ghse.projects.janap.shibaplanner.Kalender_GUI"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="de.ghse.projects.janap.shibaplanner.TerminErstellung_GUI"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="de.ghse.projects.janap.shibaplanner.Startseite"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.ghse.projects.janap.shibaplanner.Termindetails"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="de.ghse.projects.janap.shibaplanner.TerminBearbeitung_GUI"
            android:screenOrientation="portrait">
        </activity>

    </application>


</manifest>
